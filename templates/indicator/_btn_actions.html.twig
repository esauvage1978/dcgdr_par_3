{% macro show(twigTemplace,gestionnaire,item, domaine,action) %}
	{% import "macros/delele.html.twig" as del %}
	{% import "macros/widgets.html.twig" as widgets %}

	{% set _save = { 'save': {onclick: 'document.getElementById(\'submit_1\').click();', class:'btn-success',attr:{title:'Sauvegarder'}}} %}
	{% set _home = { 'home': {url: path('home'),class:'btn-p-dark',attr:{title:'Accueil'}}}  %}

	{% if action %}
		{% set _action = { 'action': {url: path('action_show',{id:action.id}),class:'btn-p-dark',attr:{title:'consulter l\'action'}}}  %}
        {% set _create={ 'create': {url: path('indicator_add',{id:action.id}),class:'btn-p-dark',attr:{title:'Ajouter un indicateur'}}} %}
    {% endif %}




    {% set actions = {} %}

    {% set actions = actions|merge(_home) %}

{% if twigTemplace!='list_contributif' %}

    {% set actions = actions|merge(_action) %}
    {% set actions = actions|merge(_create) %}
    {% set actions = actions|merge(_save) %}
{% endif %}

    {{ widgets.page_actions(actions) }}
{% endmacro %}
