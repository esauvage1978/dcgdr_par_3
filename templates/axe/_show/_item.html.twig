{% if item is defined %}

	<div class="row justify-content-center">
		<div class="{{ col_1_2 }}">
			{% embed 'widgets/card-widget.html.twig' %}
				{% block card_class %}
					card-primary card-outline
				{% endblock %}
				{% block card_body_class %}
					box-profile
				{% endblock %}
				{% block card_body %}
					<div class="text-center display-2">
						<strong>{{ item.name }}</strong>
					</div>
					<h2 class="profile-username text-center"></h2>


					<div class="float-right">
						{% if item.isEnable %}
							<span class="badge badge-success">Visible</span>
						{% else %}
							<span class="badge badge-danger">Masquée</span>

						{% endif %}

						{% if item.isArchiving %}
							<span class="badge badge-warning">Archivé</span>

						{% else %}
							<span class="badge badge-success">Non archivé</span>

						{% endif %}

					</div>
				{% endblock %}

			{% endembed %}

			{% if item.content %}
				{% embed 'widgets/card-widget.html.twig' %}
					{% block card_body %}
						{{ item.content |raw }}
					{% endblock %}
				{% endembed %}
			{% endif %}


			{% if item.content %}
				{% embed 'widgets/card-widget.html.twig' %}
{% import "macros/taux.html.twig" as tx %}

					{% block card_body %}
{{ tx.showBar(item.taux1,item.taux2,"" ) }}

					{% endblock %}
				{% endembed %}
			{% endif %}

			{% embed 'widgets/card-widget.html.twig' %}
				{% block card_title %}Pôles
				{% endblock %}
				{% block card_body %}
					{% import "macros/pole.html.twig" as pl %}
					{{ pl.vignettes(item.poles) }}
				{% endblock %}
			{% endembed %}


		</div>
	</div>


{% endif %}
