{% import "macros/file.html.twig" as file %}
{% import "macros/widgets.html.twig" as widgets %}

<table id="file-media" class="table table-striped table-condensed " style="width:100%">
    {% for cadrageFile in item.cadrageFiles %}
        <tr>
            <td>
                <a type="button" class="text-p-dark" target="_blank" href="{{ absolute_url( asset(cadrageFile.href)) }}">
                    {{ file.icon(cadrageFile.fileExtension) }}

                    {{ cadrageFile.title }}
                </a>
            </td>
            <td>
                {{ cadrageFile.content  | raw }}
            </td>
            <td>
                <small>
                    {{ widgets.showFullDateShortTime(cadrageFile.modifyAt) }}
                </small>
            </td>
			<td class="align-middle">
				<span class="ml-2 text-muted text-bold">{{ file.size(cadrageFile.size) }}</span>
			</td>            
            <td class="float-right" style="width: 100px">
                {{ file.delete_btn('cadragefile',cadrageFile)}}
            	{{ file.edit_btn('cadragefile',cadrageFile)}}
            </td>
        </tr>

    {% endfor %}

</table>