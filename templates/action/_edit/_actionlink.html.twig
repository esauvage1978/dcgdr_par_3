{% import "macros/widgets.html.twig" as widgets %}
{% import "macros/link.html.twig" as link %}
<table id="file-media" class="table table-striped table-condensed " style="width:100%">
    {% for actionLink in item.actionLinks %}
        <tr>
            <td>
                <a type="button" class="text-p-dark" target="_blank" href="{{ actionLink.link }}">
                    <i class="fas fa-globe"></i>
                    {{ actionLink.title }}
                </a>
                <br/>
                <span class="text-muted">
                    {{ actionLink.link }}
                </span>
            </td>
            <td>
                {{ actionLink.content | raw }}
            </td>
            <td>
                <small>
                    {{ widgets.showFullDateShortTime(actionLink.modifyAt) }}
                </small>
            </td>
            <td class="float-right" style="width: 100px">
                {{ link.delete_btn('actionlink',actionLink)}}
            	{{ link.edit_btn('actionlink',actionLink)}}
            </td>
        </tr>
    {% endfor %}
</table>