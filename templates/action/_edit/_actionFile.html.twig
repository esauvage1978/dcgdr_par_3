{% import "macros/file.html.twig" as file %}
{% import "macros/widgets.html.twig" as widgets %}

<table id="file-media" class="table table-striped table-condensed " style="width:100%">
    {% for actionFile in item.actionFiles %}
        <tr>
            <td>
                <a type="button" class="text-p-dark" target="_blank" href="{{ absolute_url( asset(actionFile.href)) }}">
                    {{ file.icon(actionFile.fileExtension) }}

                    {{ actionFile.title }}
                </a>
            </td>
            <td>
                {{ actionFile.content  | raw }}
            </td>
            <td>
                <small>
                    {{ widgets.showFullDateShortTime(actionFile.modifyAt) }}
                </small>
            </td>
			<td class="align-middle">
				<span class="ml-2 text-muted text-bold">{{ file.size(actionFile.size) }}</span>
			</td>            
            <td class="float-right" style="width: 100px">
                {{ file.delete_btn('actionfile',actionFile)}}
            	{{ file.edit_btn('actionfile',actionFile)}}
            </td>
        </tr>

    {% endfor %}

</table>