<!-- organisme -->
{% import "macros/taux.html.twig" as tx %}
{% import '@AdminLTE/Macros/buttons.html.twig'  as btn %}


<h3 id="anchor_organisme" class="text-p-dark2">
    <small><i class="fas fa-city"></i></small> {{ item.deployements | length }} Organismes concernés <small> par le déploiement des indicateurs</small>
</h3>
<section class="col-sm-12 p-3 mb-3">
    <div class="card ">
        {% if item.deployements.count == 0 %}
            <article class="card-body">
                <div class="mt-4 p-3 col-12 bg-light">
                <span class="text-muted">
                    Il n'y a pas encore d'organisme associé à cette action
                </span>
                </div>
            </article>
        {% else %}
            <table id="tableAdministration" class="table table-striped table-condensed "
                   style="width:100%">
                {% for deployement in item.deployements %}
                    <tr>
                        <td class="align-middle">{{ deployement.organisme.fullname }}</td>
                        <td class="text-center align-middle">
                            {% set nbr= deployement | organismeIndicateurDeployed %}
                            {% if  nbr==0 %}
                                <span class="text-light" ><i class="fas fa-circle"></i></span>
                            {% else %}
                                <small class="badge bg-info"><i class="fas fa-chart-line"></i> {{ nbr }}</small>
                            {% endif %}
                        </td>
                        <td class="text-center align-middle col-2">
                            {{ tx.showBar(deployement.taux1,deployement.taux2 ) }}
                        </td>
                        <td class="text-right align-middle">
                            {% if deployement | deployementCanUpdate %}
                                {{ btn.link_button(
                                    'Modifier',
                                    path('deployement_edit',{id:deployement.id}),
                                    'fa fa-edit',
                                    'p-dark',
                                    'p-dark btn-sm'
                                ) }}
                            {% endif %}

                        </td>
                    </tr>
                {% endfor %}
            </table>

        {% endif %}
        <div class="card-footer">
            <div class="col  d-flex justify-content-center align-items-center p-1">
                <a class="btn btn-p-dark "
                   href="{{ path('deployements_for_action', {'id': item.id}) }}"
                   data-html="true"
                   data-toggle="tooltip" data-placement="top" title="Ce bouton permet d'associer des organismes à l'action">
                    <i class="fas fa-warehouse"></i> Sélection des organismes
                </a>
            </div>
        </div>
    </div>
</section>