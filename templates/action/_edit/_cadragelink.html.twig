{% import "macros/widgets.html.twig" as widgets %}
{% import "macros/link.html.twig" as link %}
<table id="file-media" class="table table-striped table-condensed " style="width:100%">
    {% for cadrageLink in item.cadrageLinks %}
        <tr>
            <td>
                <a type="button" class="text-p-dark" target="_blank" href="{{ cadrageLink.link }}">
                    <i class="fas fa-globe"></i>
                    {{ cadrageLink.title }}
                </a>
                <br/>
                <span class="text-muted">
                    {{ cadrageLink.link }}
                </span>
            </td>
            <td>
                {{ cadrageLink.content | raw }}
            </td>
            <td>
                <small>
                    {{ widgets.showFullDateShortTime(cadrageLink.modifyAt) }}
                </small>
            </td>
            <td class="float-right" style="width: 100px">
                {{ link.delete_btn('cadragelink',cadrageLink)}}
            	{{ link.edit_btn('cadragelink',cadrageLink)}}
            </td>
        </tr>
    {% endfor %}
</table>