{% set nbrL=item.actionLinks | length %}
{% set nbrF=item.actionFiles | length %}
{% if nbrL>0 or nbrF>0 %}

<article id="file" class="bg-white">
	<h3 id="anchor_cadrage" class="text-p-dark2 pt-5">
		<small>
			<i class="fas fa-crop-alt"></i>
		</small>
		Fichiers de l'action
	</h3>


	{% import "macros/file.html.twig" as file %}
	{% import "macros/link.html.twig" as link %}
	<div class=" list-blk">
		<table class="table table-hover bg-white">
			<colgroup>
				<col class="col-lg-1">
				<col class="col-lg-8">
				<col class="col-lg-2">
				<col class="col-lg-1">
			</colgroup>

			<tbody>
				{{ file.showFiles(item.actionFiles,item,'action_file_show_secure') }}
				{{ link.showLinks(item.actionLinks) }}
			</tbody>
		</table>
	</div>


</article>
{% endif %}