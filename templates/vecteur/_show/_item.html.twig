{% if item is defined %}

	<div class="row justify-content-center">
		<div class="{{ col_1_2 }}">
			{% embed 'widgets/card-widget.html.twig' %}
				{% block card_class %}
					card-primary card-outline
				{% endblock %}
				{% block card_body_class %}
					box-profile
				{% endblock %}
				{% block card_body %}
					<div class="text-center display-2">
						<strong>{{ item.name }}</strong>
					</div>
					<h2 class="profile-username text-center"></h2>


					<div class="float-right">
						{% if item.isEnable %}
							<span class="badge badge-success">Visible</span>
						{% else %}
							<span class="badge badge-danger">Masqu√©e</span>

						{% endif %}

					</div>
				{% endblock %}

			{% endembed %}

			{% embed 'widgets/card-widget.html.twig' %}
				{% block card_title %}Actions
				{% endblock %}
				{% block card_body %}
					{% import "macros/action.html.twig" as act %}
					{{ act.vignettes(item.actions) }}

				{% endblock %}
			{% endembed %}


		</div>
	</div>


{% endif %}
